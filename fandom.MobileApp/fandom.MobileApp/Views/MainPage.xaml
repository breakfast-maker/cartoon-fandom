<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fandom.MobileApp.MainPage"
             >

    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
        <Image WidthRequest="160" HeightRequest="40" Source="Assets/southparklogo.png"  HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
    </NavigationPage.TitleView>

    <ScrollView>
        <Grid BackgroundColor="#828282"  RowSpacing="0" Padding="20,0,20,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="260" />
            <RowDefinition Height="120" />
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="120" />
            <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
         <Grid.ColumnDefinitions>
             <ColumnDefinition Width="*" />
             <ColumnDefinition Width="*" />
             <ColumnDefinition Width="*" />
             <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


            <Frame Margin="0,8,0,2" BorderColor="Black" Grid.Row="0" Grid.ColumnSpan="4"
       CornerRadius="0"
       Padding="0">
                <StackLayout BackgroundColor="#262626" Spacing="3">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnEpisodeTapped"/>
                    </StackLayout.GestureRecognizers>
                    <Image Opacity="0.5" WidthRequest="200" HeightRequest="100" Aspect="Fill" Source="Assets/southpark.png"  VerticalOptions="FillAndExpand"/>
                     <Label TextColor="#d6d6d6" Padding="10,0,0,0" Text="Episodes"
                 VerticalOptions="End"
                 FontSize="Title"
                  FontAttributes="Bold" />
                <BoxView Margin="10,0,10,0" Color="Gray"
                    HeightRequest="2"
                    VerticalOptions="End"
                    HorizontalOptions="Fill" />
                    <Label TextColor="#d6d6d6"  Padding="10,5,0,5" VerticalOptions="End" Text="Whatch your favourite episodes for free"/>
            </StackLayout>
        </Frame>

            <Frame Margin="0,2,0,2" BackgroundColor="#262626" CornerRadius="0" BorderColor="Gray" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <StackLayout Spacing="3" VerticalOptions="CenterAndExpand">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCharacterTapped"/>
                    </StackLayout.GestureRecognizers>
                    <Label TextColor="#d6d6d6" Text="Characters"
                 VerticalOptions="End"
                 FontSize="Title"
                  FontAttributes="Bold" />

                    <Label TextColor="#d6d6d6" VerticalOptions="End" Text="Check out characters from South Park"/>
            </StackLayout>
        </Frame>

            <Frame Margin="0,2,0,2" CornerRadius="0" BackgroundColor="#262626" BorderColor="Gray" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2">
            <StackLayout Spacing="3" VerticalOptions="CenterAndExpand">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCommunityTapped"/>
                    </StackLayout.GestureRecognizers>
                    <Label TextColor="#d6d6d6" Text="Community"
                 VerticalOptions="End"
                 FontSize="Title"
                  FontAttributes="Bold" />

                    <Label TextColor="#d6d6d6" VerticalOptions="End" Text="Post something cool about South Park"/>
            </StackLayout>
        </Frame>

            <Grid Margin="0,2,0,2" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.ColumnSpan="3" Text="Recommended episodes"/>
            <BoxView Color="Red" Grid.Row="1" Grid.Column="0" CornerRadius="10"/>
            <BoxView Color="Blue" Grid.Row="1" Grid.Column="1" CornerRadius="10"/>
            <BoxView Color="Green" Grid.Row="1" Grid.Column="2" CornerRadius="10"/>
        </Grid>


            <Grid Margin="0,2,0,2" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.ColumnSpan="3" Text="Favourite episodes"/>
            <BoxView Color="Red" Grid.Row="1" Grid.Column="0" CornerRadius="10"/>
            <BoxView Color="Blue" Grid.Row="1" Grid.Column="1" CornerRadius="10"/>
            <BoxView Color="Green" Grid.Row="1" Grid.Column="2" CornerRadius="10"/>
        </Grid>

            <Grid Padding="0,2,0,2" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                    <RowDefinition Height="85" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.ColumnSpan="3" Text="Favourite characters"/>
                <BoxView Color="Red" Grid.Row="1" Grid.Column="0"/>
                <BoxView Color="Blue" Grid.Row="1" Grid.Column="1"/>
                <BoxView Color="Green" Grid.Row="1" Grid.Column="2"/>
                <BoxView Color="Orange" Grid.Row="1" Grid.Column="3"/>

            </Grid>
        </Grid>
    </ScrollView>

</ContentPage>
